<Page x:Class="AuthApp.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuthApp.Pages"
      mc:Ignorable="d" 
      Title="RegPage"
      >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Логин" Margin="5"/>
            <TextBox x:Name="loginBox" Margin="5" AutomationProperties.AutomationId="1"/>
            <TextBlock Text="Пароль" Margin="5"/>
            <PasswordBox x:Name="passwordBox" Margin="5"   AutomationProperties.AutomationId="ter"/>
            <TextBlock Text="Подтверждение пароля" Margin="5"/>
            <PasswordBox x:Name="confirmPasswordBox" Margin="5"   AutomationProperties.AutomationId="3"/>
            <Button x:Name="regButton" Content="Зарегистрироваться" Margin="5" Click="RegButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
